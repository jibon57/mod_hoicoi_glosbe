<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6" method="upgrade">
	<name>Hoicoi_glosbe</name>
	<creationDate>2015-06-02</creationDate>
	<author>Jibon Lawrence Costa</author>
	<authorEmail>jiboncosta57@gmail.com</authorEmail>
	<authorUrl>http://extensions.hoicoimasti.com/</authorUrl>
	<copyright>Copyright (C) 2015 Jibon Lawrence Costa Open Source Matters. All rights reserved.</copyright>	
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1</version>
	<description>Integration dictionary from https://glosbe.com/. You can get language list from here: http://en.wikipedia.org/wiki/List_of_ISO_639-1_codes</description>
	<files>
		<filename module="mod_hoicoi_glosbe">mod_hoicoi_glosbe.php</filename>
		<folder>tmpl</folder>
		<folder>fields</folder>
		<folder>assets</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_hoicoi_glosbe.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_hoicoi_glosbe.ini</language>
    	<language tag="de-DE">language/de-DE.mod_hoicoi_glosbe.ini</language>            
	</languages>
	<params>
		<param name="classname" type="text" default="" label="Class Name" description="Class Name Description" />
	</params>
	<config>
		<fields name="params">
			<fieldset addfieldpath="/modules/mod_hoicoi_glosbe/fields" name="basic">
				<field name="classname" type="text" default="" label="Class Name" description="Class Name Description" />
				 <field  description=""  label="Language Field" name="lang" type="Lang" />
			</fieldset>
		</fields>
	</config>			
</extension>